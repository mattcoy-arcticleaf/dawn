{% comment %}
    Render product reviews
    Accepts:
    - product_review: {Object} Product review from metafield

    Usage:
    {% render 'product-ratings', product_review: product.metafields.reviews %}
{% endcomment %}
{%- if product_review.rating.value != blank -%}
    <div class="rating-wrapper">
    {% liquid
        assign rating_decimal = 0
        assign decimal = product_review.rating.value.rating | modulo: 1
        if decimal >= 0.3 and decimal <= 0.7
        assign rating_decimal = 0.5
        elsif decimal > 0.7
        assign rating_decimal = 1
        endif
    %}
    <div class="rating" role="img" aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product_review.value, rating_max: product_review.rating.value.scale_max }}">
        <span aria-hidden="true" class="rating-star" style="--rating: {{ product_review.rating.value.rating | floor }}; --rating-max: {{ product_review.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"></span>
    </div>
    <p class="rating-text caption">
        <span aria-hidden="true">
            {{- product_review.rating.value }} /
            {{ product_review.rating.value.scale_max -}}
        </span>
    </p>
    <p class="rating-count caption">
        <span aria-hidden="true">
            ({{ product_review.rating_count }})
        </span>
        <span class="visually-hidden">
            {{- product_review.rating_count }}
            {{ 'accessibility.total_reviews' | t -}}
        </span>
    </p>
    </div>
{%- endif -%}